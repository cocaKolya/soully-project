<div class='row'>
  <div class='s4 offset-s4'>
    <form action='/user/login' method='POST'>
      <div class='row'>
        <div class='input-field col s4'>
          <input
            id='email'
            type='email'
            class='validate c-dk-green'
            name='email'
          />
          <label for='email'>Email</label>
        </div>
      </div>
      <div class='row'>
        <div class='input-field col s4'>
          <input
            id='password'
            type='password'
            class='validate'
            name='password'
          />
          <label for='password'>Password</label>
        </div>
        <button class='btn button' type='submit'>Submit</button>
      </div>
    </form>
  </div>
</div>
