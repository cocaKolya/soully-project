<script defer src='/javascripts/registration.js'></script>

<link rel='stylesheet' href='/stylesheets/registration.css' />

<div class='quiz-wrapper'>
  <h1 class='head-h'>make a new account</h1>
  <div id='birth-wrapper' class='hidden row'>
    <form name='regForm' action='/user/registration' method='POST'>
      <div
        style='margin-bottom: 1.5rem!important'
        class='input-data form-floating mb-3 col'
      >
        <input
          style='color:white'
          placeholder='name'
          name='name'
          id='floatingName'
          type='text'
          class='form-control'
        />
        <label for='floatingInput'>username</label>
      </div>
      <div
        style='margin-bottom: 1.5rem!important'
        class='input-data form-floating mb-3 col'
      >
        <input
          style='color:white'
          type='email'
          name='email'
          class='form-control'
          id='floatingInput'
          placeholder='name@example.com'
        />
        <label for='floatingInput'>email address</label>
      </div>
      <div
        cstyle='margin-bottom: 1.5rem!important'
        class='form-floating mb-3 col'
      >
        <input
          style='color:white'
          type='password'
          name='password'
          class='form-control'
          id='floatingPassword'
          placeholder='Password'
        />
        <label for='floatingPassword'>password</label>
      </div>
      <button
        id='registration-btn'
        style='width:40%'
        type='button'
        class='birthdata-btn btn btn-outline-light'
      >create account</button>
    </form>
  </div>
</div>
